{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": { "*": ["types/*"] },
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "outDir": "dist/",
        "module": "es2015",
        "moduleResolution": "node",
        "strict": true,
        "alwaysStrict": true,
        "plugins": [
            {
                "name": "typescript-tslint-plugin"
            }
        ]
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js"
    ],
    "exclude": [
        "node_modules"
    ]
}